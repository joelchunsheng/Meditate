<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopItem"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginHorizontal="4dp"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/shopItemCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorPlatinum">

        <ImageView
            android:id="@+id/shopItemImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/calm"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/guideTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lockImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/guideDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide des" />

    </LinearLayout>




</LinearLayout>