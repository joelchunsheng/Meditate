<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.meditate.EditProfile.EditPasswordActivity">

    <ImageButton
        android:id="@+id/editPassBackBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:elevation="3dp"
        android:background="@drawable/back_btn_bg"
        android:src="@drawable/baseline_arrow_back_black_24dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/epassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:text="Edit password"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/epassTxt"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Current password"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cPasswordEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/sourcesanspro_regular"
            android:hint="Enter current password"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="New password (8+ characters)"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/nPasswordEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/sourcesanspro_regular"
            android:hint="Enter new password"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Confirm new password"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rPasswordEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/sourcesanspro_regular"
            android:hint="Confirm new password"
            android:inputType="textPersonName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/savePasswordCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorSandy"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:paddingVertical="13dp"
                android:text="SAVE"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cancelPasswordCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingVertical="13dp"
                android:text="Cancel"
                android:textColor="#000000"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>



</RelativeLayout>