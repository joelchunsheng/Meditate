<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shop.BuyGuideActivity" >


    <ImageView
        android:id="@+id/packageImage"
        android:layout_width="401dp"
        android:layout_height="216dp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/packageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15sp"
        android:text="Guide Title"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/packageAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textSize="15sp"
        android:text="Author" />

    <TextView
        android:id="@+id/packageDescription"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15sp"
        android:text="Guide Description"
        android:textSize="20sp" />

    <Button
        android:id="@+id/packageBuyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/login_sign_up_button"
        android:text="Buy for ___ coins" />


</LinearLayout>