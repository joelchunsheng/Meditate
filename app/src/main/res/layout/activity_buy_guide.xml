<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop.BuyPackageActivity" >

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:elevation="3dp"
        android:background="@drawable/back_btn_bg"
        android:src="@drawable/baseline_arrow_back_black_24dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:padding="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/piCard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/packageImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/packageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/piCard"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:text="Package Title"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/packageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageTitle"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="Package Description"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/packageBuyButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/login_sign_up_button"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:text="Loading..."
        android:textColor="#FDFDFD" />


</RelativeLayout>