<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarSelect.AvatarSelectActivity"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/avatarSelectBackButton"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="40sp"
        android:layout_weight="0.1"
        android:background="@drawable/back_btn_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/avatarSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose an Avatar"
        android:layout_marginTop="20sp"
        android:layout_marginStart="15sp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avatarSelectList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_weight="0.7" />
</LinearLayout>

