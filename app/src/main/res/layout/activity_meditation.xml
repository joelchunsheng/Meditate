<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Meditation.MeditationActivity"
    android:background="@drawable/meditatebg"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/meditationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/genreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="category"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/meditateExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_clear_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meditationHeader"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:paddingVertical="30dp"
        >

        <TextView
            android:id="@+id/meditateTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artistTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 min"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/playCard"
        android:layout_above="@id/seekBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorTerraCotta"
        android:clickable="true"
        android:layout_marginBottom="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/playPauseImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
               />

    </androidx.cardview.widget.CardView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>


</RelativeLayout>