<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mad.meditate.Meditation.MeditationActivity"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/headerRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/mBackImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/meditate_back_btn"
            android:elevation="3dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_clear_black_24dp"
            android:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/genreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sourcesanspro_bold"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="category"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>




    <ImageButton
        android:id="@+id/playImageBtn"
        android:layout_width="235dp"
        android:layout_height="230dp"
        android:layout_marginTop="100dp"
        android:layout_below="@id/headerRL"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playbg"
        android:src="@drawable/baseline_play_arrow_black_24dp"
        android:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/timerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playImageBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp">

        <TextView
            android:id="@+id/meditateTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artistTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Artist"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textColor="#000000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/durationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="0 min"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal" />



    </LinearLayout>




</RelativeLayout>