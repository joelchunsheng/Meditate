<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Meditation.MeditationActivity">

    <ImageView
        android:id="@+id/meditateImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/meditateTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/meditateImageView"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="10dp"
        android:text="Title"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meditateDesTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/meditateImageView"
        android:layout_below="@id/meditateTitleTxt"
        android:layout_marginStart="10dp"
        android:text="Des"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/songImageView"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sleep_album"
        android:layout_below="@id/meditateDesTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
         />

    <TextView
        android:id="@+id/songTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songImageView"
        android:text="Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/songSingerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songTitleTxt"
        android:text="Singer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#000"/>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/play_btn_background"
        android:padding="10dp"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:tint="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/next_previous_btn_background"
        android:padding="3dp"
        android:src="@drawable/ic_skip_previous_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btnPlay"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNext"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/next_previous_btn_background"
        android:padding="3dp"
        android:src="@drawable/ic_skip_next_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnPlay"
        android:layout_marginStart="20dp"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlay"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:theme="@style/SeekBarTheme"></androidx.appcompat.widget.AppCompatSeekBar>



</RelativeLayout>