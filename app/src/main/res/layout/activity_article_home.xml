<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    tools:context=".ArticleHome.ArticleHome">

    <TextView
        android:id="@+id/meditationArtitcleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/sourcesanspro_bold"
        android:text="Meditation Articles"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bigArticlesRecycler"
        android:layout_below="@id/meditationArtitcleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/moreArticlesTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigArticlesRecycler"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="Other articles"
        android:textColor="#000000"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/smallArticlesRecycler"
        android:layout_below="@id/moreArticlesTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/maBackBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:elevation="3dp"
        android:background="@drawable/back_btn_bg"
        android:src="@drawable/baseline_arrow_back_black_24dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:padding="10dp"/>

</RelativeLayout>