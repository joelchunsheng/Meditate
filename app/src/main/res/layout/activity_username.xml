<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.meditate.Username.UsernameActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|left"
        android:src="@drawable/qcircle"
        android:tint="@color/colorSandy" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/sourcesanspro_bold"
            android:text="Last Step"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="289dp"
            android:layout_height="53dp"
            android:background="#d8d8d8"
            android:ems="10"
            android:fontFamily="@font/sourcesanspro_regular"
            android:hint="Enter Your Username"
            android:inputType="textPersonName"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/usernameButton"
        android:layout_width="194dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:background="@drawable/login_sign_up_button"
        android:text="Confirm"
        android:textColor="#ffffff" />
</LinearLayout>